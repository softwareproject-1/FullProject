{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["ES2021"],
    "strict": false,

    /** NestJS + Decorators */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /** For using Mongoose + DTO imports */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /** Output options */
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "incremental": true,

    /** Helpful for your backend team */
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    /** Optional Less strict behavior (same as your reference) */
    "noImplicitAny": false,
    "strictNullChecks": false
  },

  "include": ["src/**/*", "Models/**/*", "Services/**/*"],
  "exclude": ["node_modules", "dist"]
}
